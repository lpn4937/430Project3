<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>SongMaker</title>
  <script crossorigin src="https://unpkg.com/react@15/dist/react.min.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@15/dist/react-dom.min.js"></script>
  <script crossorigin src="https://unpkg.com/prop-types/prop-types.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.6.2/remarkable.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
  <link rel="stylesheet" type="text/css" href="/assets/bootstrap.css"/>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary"><a href="/login"></a>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><a id="loginButton" class="text-light nav-link active" href="/">Return</a></li>
    </ul>
  </nav>
  <section id="songs">
    <div class="row top-buffer m-3">
      {{#if songs}}
        {{#each songs}}
          <div class="col-lg-2">
            <div class="card"><img src="{{this.art}}" alt="card image cap" class="card-img-top"/>
              <audio class="media" controls>
                <source src="{{this.preview}}" type="audio/x-m4a">
                Your browser does not support the audio element.
              </audio>
              <div class="card-body">
                <h5 class="songName">Name: </h5><p>{{this.name}}</p>
                <h5 class="songArtist">Artist: </h5><p>{{this.artist}}</p>
                <h5 class="songAlbum">Album: </h5><p>{{this.album}}</p>
              </div>
              <form class="close" action="/deleteSharedSong" name="{{this.name}}">
                <button type="submit" class="close" aria-label="Close" name="name" value="{{this.name}}">
                  <span aria-hidden="true">&times;</span>
                </button>
              </form>
            </div>
          </div>
        {{/each}}
      {{else}}
        <div class="row">
          <div class="col-lg-12">
            <h3 class="emptySong">No Songs yet</h3>
          </div>
        </div>
      {{/if}}
    </div>
  </section>
  <script src="/assets/loginBundle.js"></script>
</body>
</html>
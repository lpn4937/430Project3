<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>DomoMaker</title>
  <script crossorigin src="https://unpkg.com/react@15/dist/react.min.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@15/dist/react-dom.min.js"></script>
  <script crossorigin src="https://unpkg.com/prop-types/prop-types.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.6.2/remarkable.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
  <link rel="stylesheet" type="text/css" href="/assets/bootstrap.css"/>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary"><a href="/login"></a>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><a id="loginButton" class="text-light nav-link active" href="/">Return</a></li>
    </ul>
  </nav>
  <section class="formFormat">
    <h2>You must have a premium account to continue, please enter your credit card information</h2>
    <form id="creditForm" name="songForm" action="/makePremium" method="POST" class="pageForm">
    <div class="form-group">
    <label for="ccNumber">Number: </label>
    <input id="ccNumber" class="form-control" id="ccNumber" type="text" name="name" placeholder="Credit Card Number"/>
    </div>
    <div class="form-group">
    <label for="artist">Expiration Date: </label>
    <input id="songArtist" class="form-control" id="songArtist" type="text" name="artist" placeholder="Expiration Date"/>
    </div>
    <div class="form-group">
    <label for="album">Security Code: </label>
    <input id="songAlbum" class="form-control" id="songAlbum" type="text" name="album" placeholder="Security Code"/>
    </div>
    <input type="hidden" name="_csrf" value={{csrfToken}} />
    <input class="btn btn-primary" type="submit" value="Submit" />
    </form>
    <div id="errorMessage"></div>
  </section>
</body>
</html>